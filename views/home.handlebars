<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                {{#if this.completa}}
                <div class="completa">
                    <input type="checkbox" id="tarefa-{{this.id}}" checked onchange="descompletartarefa({{this.id}})"> 
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
                {{else}}
                <div>
                    <input type="checkbox" id="tarefa-{{this.id}}" onchange="completarTarefa({{this.id}})">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
                {{/if}}

                <button onclick="excluirTarefa({{this.id}})">
                    <img src="/imagens/x-icon.png" alt="Ã­cone de x para excluir uma tarefa">
                    </button>
            </form>
        </div>
        {{/each}}
        <div class="informacoes">
            <p>{{quantidadeTarefasAtivas}} tarefas ativas</p>
            <a href="">Limpar tarefas</a>

            <div class="botoes">
                <a href="/" class="active">Todas</a>
                <a href="/ativas">Ativas</a>
                <a href="/completas">Completas</a>
            </div>
             <a href="">Limpar tarefas</a>
        </div>
           

    </section>

    <section class="botoes">
        <a href="/" class="active">Todas</a>
        <a href="/ativas">Ativas</a>
        <a href="/completas">Completas</a>
    </section>
</main>